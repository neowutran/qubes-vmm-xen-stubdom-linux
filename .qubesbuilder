host:
  rpm:
    build:
    - rpm_spec/xen-hvm-stubdom-linux.spec
source:
  # 'create-archive' makes 'prep' plugin to create source archive even if
  # external files are provided. By default, if files are provided
  # it treats component as external source like "xen", "grub", etc.
  create-archive: true
  files:
  - url: https://download.qemu.org/qemu-4.2.0.tar.xz
    signature: https://download.qemu.org/qemu-4.2.0.tar.xz.sig
    pubkeys:
    - keys/qemu/mdroth.asc
    - keys/qemu/pbonzini.asc
  - url: https://cdn.kernel.org/pub/linux/kernel/v5.x/linux-5.4.74.tar.xz
    signature: https://cdn.kernel.org/pub/linux/kernel/v5.x/linux-5.4.74.tar.sign
    uncompress: true
    pubkeys:
    - keys/linux/greg.asc
  - url: https://busybox.net/downloads/busybox-1.31.1.tar.bz2
    signature: https://busybox.net/downloads/busybox-1.31.1.tar.bz2.sig
    pubkeys:
    - keys/busybox/vda_pubkey.asc
  - url: https://freedesktop.org/software/pulseaudio/releases/pulseaudio-13.99.1.tar.xz
    sha512: checksums/pulseaudio-13.99.1.tar.xz.sha512
  - url: https://github.com/libusb/libusb/releases/download/v1.0.23/libusb-1.0.23.tar.bz2
    sha512: checksums/libusb-1.0.23.tar.bz2.sha512
